<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>ValidadorServlet</servlet-name>
        <servlet-class>com.fernandopaniagua.controller.ValidadorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreadorUsuariosServlet</servlet-name>
        <servlet-class>com.fernandopaniagua.controller.CreadorUsuariosServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConsultarUsuario</servlet-name>
        <servlet-class>com.fernandopaniagua.controller.ConsultarUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreadorUsuariosWS</servlet-name>
        <servlet-class>com.fernandopaniagua.controller.CreadorUsuariosWS</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ValidadorServlet</servlet-name>
        <url-pattern>/ValidadorServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreadorUsuariosServlet</servlet-name>
        <url-pattern>/CreadorUsuariosServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConsultarUsuario</servlet-name>
        <url-pattern>/ConsultarUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreadorUsuariosWS</servlet-name>
        <url-pattern>/CreadorUsuariosWS</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
